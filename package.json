{
  "name": "react-component-mocker",
  "version": "0.2.0",
  "description": "Helps mock React components in unit tests",
  "author": "Serge Malinin <s@malinin.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/malinindev/react-component-mocker.git"
  },
  "homepage": "https://github.com/malinindev/react-component-mocker",
  "bugs": {
    "url": "https://github.com/malinindev/react-component-mocker/issues"
  },
  "keywords": [
    "React unit",
    "React component mocker"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsc --project tsconfig.build.json --watch",
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "build:pack": "npm run build && npm pack",
    "release:prepare": "changeset",
    "release:publish": "changeset publish",
    "prepublishOnly": "npm run check:all",
    "test": "vitest run && npm run test:jest",
    "test:jest": "jest",
    "check:all": "npm run build && npm run check:format && npm run check:exports && npm run test",
    "check:type": "tsc --noEmit",
    "check:exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "check:lint": "biome lint ./src",
    "check:format": "biome format ./src",
    "fix:format": "biome format --write ./src"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.29.2",
    "@jest/globals": "^30.0.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "jsdom": "^26.1.0",
    "react": "^19.1.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  }
}
